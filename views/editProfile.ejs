<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="background-image">
        <img src="/images/dorm.png" alt="">
    </div>
    <div class="edit-profile-wrapper">


        <div class="edit-profile-container">
            <h1>Edit Account Information</h1>
            <form id="edit-profile-form">
                <label for="username">Username:</label>
                <input type="text" name="username" id="username">
                <label for="editPassword">New Password:</label>
                <input type="password" id="editPassword" name="editPassword">
                <label for="rePassword">Re-enter New Password:</label>
                <input type="password" id="rePassword" name="rePassword">
                <!--<label for="profilePicture">Edit Profile Picture:</label>
                <input type="file" name="profilePicture" id="profilePicture">-->
                <label for="description">Edit Personal Description:</label>
                <textarea name="personalDescription" id="personalDescription" rows="4"><%= user.personalProfile %></textarea>
                <label for="description">Edit Gym Description:</label>
                <textarea name="gymDescription" id="gymDescription" rows="4"><%= user.gymProfile %></textarea>
                <label for="profilePicture">Select Profile Picture:</label>
                <div class="image-selector">
                    <button id="prevImage" onclick="changeImage(-1)">◀</button>
                    <div class="preview-container">
                        <img id="previewImage" src="/uploads/avatar1.jpg" alt="Profile Preview" class="profile-option">
                    </div>
                    <button id="nextImage" onclick="changeImage(1)">▶</button>
                    <select name="profilePicture" id="profilePicture" style="display: none;">
                        <option value="/uploads/avatar1.jpg" label="Image 1">Avatar 1</option>
                        <option value="/uploads/avatar2.jpg" label="Image 2">Avatar 2</option>
                        <option value="/uploads/avatar3.gif" label="Image 3">Avatar 3</option>
                        <option value="/uploads/avatar3.jpg" label="Image 4">Avatar 4</option>
                        <option value="/uploads/avatar4.jpg" label="Image 5">Avatar 5</option>
                        <option value="/uploads/avatar5.jpg" label="Image 6">Avatar 6</option>
                        <option value="/uploads/avatar6.jpg" label="Image 7">Avatar 7</option>
                    </select>
                </div>
                <button id="save-changes-button">Save Changes</button>
                <button id="delete-account-button" class="log-out">Delete Account</button>
            </form>
        </div>
    
        <div class="overlay" id="confirmationOverlay">
            <div class="confirmation-box">
                <h2>Confirm Account Deletion</h2>
                <label for="confirmationEmail">Email:</label>
                <input type="email" id="confirmationEmail" name="confirmationEmail" required>
                <label for="confirmationPassword">Password:</label>
                <input type="password" id="confirmationPassword" name="confirmationPassword" required>
                <button id="cancelDelete">Cancel</button>
                <button id="confirmDelete">Confirm</button>
            </div>
        </div>
        
          
    </div>
   

    <%- include('./partials/footer.ejs') %>
  <script src="/JS files/nav.js"></script>
  <script src="/JS files/editProfile.js"></script>
</body>
</html>